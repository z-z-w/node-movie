extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 用户名
            th 密码
            th 时间
        tbody
          each item in users
            tr(class='item-id-#{item._id}')
              td #{item.name}
              td #{item.password}
              td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
      include page