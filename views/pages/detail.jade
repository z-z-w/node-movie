            if user
              #commentForm
                input(type='hidden', name='username', value='#{user.name}')
                input(type='hidden', name='movieId', value='#{movie._id}')
                input#userId(type='hidden', name='fromId', value='#{user._id}')
                .form-group
                  textarea.form-control(name='content', rows='3')
                button.btn.btn-primary(id='commentSubmit') 提交
            else
              .panel-footer
                p 发表评论，请先登录
      .col-md-5
        dl.dl-horizontal
          dt 电影名字
          dd= movie.title
          dt 导演
          dd= movie.doctor
          dt 国家
          dd= movie.country
          dt 语言
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 简介
          dd= movie.summary
