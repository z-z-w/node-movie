extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 电影分类
            th 电影数目
            th 录入时间
            th 查看
        tbody
          each item in categories
            tr(class='item-id-#{item._id}')
              td #{item.name}
              td #{item.movies.length}
              td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
              if item.movies.length < 1
                td 查看
              else
                td: a(href='../admin/list?id=#{item._id}') 查看
      include page